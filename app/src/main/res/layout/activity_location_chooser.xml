<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/img"
        android:src="@drawable/logo"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/containers"
        android:layout_below="@id/img"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#938e8e"
            android:text="Choose Your "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorPrimary"
            android:text=" LOCATION "/>

    </LinearLayout>
    <TextView
        android:layout_below="@id/containers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:id="@+id/txtcity"
        android:textColor="#938e8e"
        android:textSize="18dp"
        android:text="Your City"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcity"
        android:paddingLeft="20dp"
        android:singleLine="true"

        android:background="@drawable/edt_custom"
        android:textColor="#292727"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:textColorHint="@color/colorPrimary"
        android:text="Hồ chí minh"
        android:id="@+id/edtcity"
        android:paddingRight="20dp"/>
    <TextView
        android:paddingTop="10dp"
        android:layout_below="@id/edtcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textColor="#938e8e"
        android:id="@+id/txtyoudress"
        android:textSize="18dp"
        android:text="Tên nhà hàng"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtyoudress"
        android:paddingLeft="20dp"
        android:background="@drawable/edt_custom"
        android:textColor="#292727"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"

        android:singleLine="true"
        android:text=""
        android:hint="ABC"
        android:textColorHint="#81000000"
        android:id="@+id/edtyoudress"
        android:paddingRight="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="CURRENT lOCATION"
        android:textStyle="bold"
        android:background="#ffffff"
        android:textColor="#292727"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edtyoudress"
        android:drawableTop="@drawable/user"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/btnShow"
        android:background="@drawable/background_show_restaurant"
        android:text="Show Restaurants"/>

</RelativeLayout>
